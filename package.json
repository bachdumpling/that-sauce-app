{
  "private": true,
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.3.3"
  },
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:api\"",
    "dev:client": "cd app/client && npm run dev",
    "dev:api": "cd app/api && npm run dev",
    "build": "concurrently \"npm run build:client\" \"npm run build:api\"",
    "build:client": "cd app/client && npm run build",
    "build:api": "cd app/api && npm run build"
  }
}
